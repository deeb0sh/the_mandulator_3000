generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL") // .env ==> DATABASE_URL="хуёмаё"
}

model users {
  id String @id @default(uuid()) @unique
  login String @unique
  password String
  salt String
  roleID Int @default(0)
  lastLoginAt DateTime?
  createAt  DateTime @default(now())
  updatedAt DateTime?
  
}

